<section id="signing">
	<h2>Bienvenidos a Pukara</h2>
	
	<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
	  <div class="field">
	  	<%= f.text_field :username, :size => 28 %>
	  </div>

	  <div class="field">
	  	<%= f.password_field :password, :size => 28 %>
	  </div>

	  <% if devise_mapping.rememberable? -%>
	    <div class="remember">
	    	<%= f.check_box :remember_me %> 
	    	<%= f.label :remember_me, "Recordar usuario" %>
	    </div>
	  <% end -%>

	  	<div class="sign_field">
	  		<%= link_to_function "INICIAR SESION", "submitForm(this)", :class => "submit_link" %>
		</div>

		<%= f.submit "enviar"%>

	<% end %>

	<% unless flash.empty? %>
		<div id="alert_zone">
			<%= flash[:alert] %>
			<%= flash[:notice] %>
		</div>
	<% end %>
</section>