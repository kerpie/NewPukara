<section id="quotation_title_part">
	<hgroup id="quotation_title">
		<h1>Buscar cotizacion</h1>
	</hgroup>
</section>

<section id="search_quotation_index">
	<%= form_tag quotation_search_path,:id => "search_for_quotation", :remote => true do |f| %>
		<div class="search_quotation_div">
			<%= label_tag "code", "CÃ³digo:" %><br>
			<%= text_field_tag "code" %>
		</div>
		<div class="search_quotation_div">
			<%= submit_tag "Buscar" %>
		</div>
	<% end %>
</section>

<section id="search_response">
	
</section>

<section id="last_quotations">
	<table>
		<thead>
			<tr>
				<td>Codigo</td>
				<td>Cliente</td>
				<td>Fecha</td>
				<td>Total a pagar</td>
				<td>Estado de la Cotizacion</td>
			</tr>
		</thead>
		<tbody>
			<% @quotations.each do |quotation| %>
				<tr>
					<td><%= quotation.code %></td>
					<td><%= quotation.client.name %></td>
					<td><%= quotation.date.to_formatted_s(:rfc822) %></td>
					<td><%= quotation.money_expected %></td>
					<td><%= quotation.payment_status %></td>
				</tr>
			<% end %>
		</tbody>
	</table>
</section>