<li>
	<div class="clickable_product">
		<%= form_tag quotation_search_stock_path, remote: true do %>
			<%= hidden_field_tag "user_id", current_user.id %>
			<%= hidden_field_tag "product_id", product.id %>
			<%= image_submit_tag image_url(product, :medium) %>
		<% end -%>
		<h2><%= product.model.name %></h2>
	</div>
</li>