<!DOCTYPE html>
<html>
	<head>
	  	<title>Final</title>
	  	<%= stylesheet_link_tag    "application", :media => "all" %>
	  	<%= javascript_include_tag "application" %>
	 	<%= javascript_include_tag "http://ajax.googleapis.com/ajax/libs/jquery/1.8.0/jquery.min.js" %>
		<%= csrf_meta_tags %>
	</head>
	<body>
		<% if user_signed_in? %>
			<section id="main_section">
				<section id="user_data">
					<div id="current_user_data">
						<p>Sesion iniciada como: <%= current_user.username %></p>
						<p>Roles Asignados: 
							<% current_user.roles.each do |role| %>
								<%= role.name %>
							<% end %>
						</p>
					</div>
					<div id="user_session_options">
						<ul>
							<li><%= link_to "editar perfil", edit_user_registration_path %></li>
							<li><%= link_to "cerrar sesion", destroy_user_session_path, :method => :delete %></li>
						</ul>
					</div>
				</section>
				<%= yield %>	
			</section>
		<% else %>
			<section id="signing">
				<%= yield %>	
			</section>
		<% end %>
	</body>
</html>
