<%= form_tag second_search_path, :remote => true do %>
	<%= hidden_field_tag "product_search_type", second_data.id %>
	<div class="form_div">
		<%= label_tag "product_search_model_type", "Sub-Clasificacion:" %><br/>
		<%= select_tag "product_search_model_type", options_from_collection_for_select(data, :id, :name), :prompt => "Seleccione Sub-Clasificacion" %>
	</div>
	<div class="form_div">
		<%= label_tag "product_search_brand", "Marca:" %><br/>
		<%= select_tag "product_search_brand", options_from_collection_for_select(Brand.all, :id, :name), :prompt => "Seleccione Marca" %>
	</div>
	<div class="submit_part">
		<%= submit_tag "consultar", :id => "second_submit_button" %>
	</div>
<% end %>