<div class="et_doc_detail_item">
  <div class="nested_doc_detail_field">
    <%= data.label :product_id, "Producto:" %>
    <%= data.text_field :product_id, :class => "forever_hidden" %>
    <div class="k_part">
      <%= text_field_tag "kid_new_entry_document_details", "" ,:class => "ef_dd_product_name" %>
      <span class="clickable_space">Cambiar</span>
    </div>
  </div>
  <div class="nested_doc_detail_field">
    <%= data.label :purchase_price, "Precio de Compra: " %>
    <%= data.text_field :purchase_price, :class => "purchase_price_goes_here", :style => "width: 160px" %>
    <%= data.collection_select :money_type_id, MoneyType.all, :id, :name %>
  </div>
  <div class="nested_doc_detail_field">
    <%= data.label :quantity, "Cantidad: " %>
    <%= data.text_field :quantity %>
  </div>
  <div class="nested_doc_detail_field">
    <%= data.label :unit_id, "Unidad" %>
    <%= data.collection_select :unit_id, Unit.all, :id, :name %>
  </div>
  <div class="nested_doc_detail_field">
    <%= data.check_box :_destroy %>
    <%= data.label :_destroy, "Eliminar" %>
  </div>
</div>