<section class="output_code_title_part">
  <hgroup class="output_code_title">
    <h1>Formulario de Registro</h1>
  </hgroup>
</section>

<section id="code_output_register">
	
	<%= form_tag code_output_save_codes_path, :remote => true do %>
		<% @folder.output_document_details.each do |dd| %>
			<%= hidden_field_tag "folder_id", @folder.id %>
			<div class="document_detail_form">
				<div class="data">
					<span>Producto: </span>
					<%= dd.product.full_name %><br/>
					<span>Cantidad: </span>
					<%= dd.quantity %><br/>
				</div>
				<div class="dd_data">
					<table>
						<tr>
							<th>Codigo Generado</th>
						</tr>
						<% dd.output_codes.each do |code| %>
							<tr>
								<td><%= ouput_text_field_with_value("code_"+code.id.to_s,code) %></td>
							</tr>
						<% end %>
					</table>
				</div>
			</div>
		<% end %>
		<div id="submit_input">
			<%= submit_tag "Registrar Codigos"%>
		</div>
	<% end %>
	<div id="alert">
		<%= form_tag code_output_show_path do %>
			<%= hidden_field_tag "folder_id", @folder.id %>
			<%= submit_tag "Ver Codigos Registrados" %>
		<% end %>
	</div>
</section>