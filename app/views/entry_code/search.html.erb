<section class="entry_code_title_part">
  <hgroup class="entry_code_title">
    <h1>Series de ingreso</h1>
  </hgroup>
</section>

<section id="entry_code_search">
	<h1>Buscar Documento</h1>
	<%= form_tag code_entry_result_path, :remote => true do %>
		<div class="search_part">
			<%= label_tag "doc_type", "Tipo de Documento: "%><br>
			<%= select_tag "doc_type", options_from_collection_for_select(DocumentType.all, :id, :name) %>
		</div>
		<div class="search_part">
			<%= label_tag "numbers", "Numeracion: "%><br>
			<%= text_field_tag "numbers" %>
		</div>
		<div class="search_part">
			<%= label_tag "supplier", "Proveedor: " %><br>
			<%= text_field_tag "supplier", '',:class => "forever_hidden" %>
			<div class="supplier_search_in_entry_codes">
				<%= text_field_tag "supplier_name" %><br>
				<%= link_to_function "Cambiar Proveedor", "showSupplierSearch()" %>
			</div>
		</div>
		<div class="search_part">
			<span id="submit_entry_code_search">Buscar</span>
			<%= submit_tag "Consultar", :class => "forever_hidden" %>
		</div>
	<% end %>

	<p id="error_message">No hay documentos registrados con esos datos</p>
	<div id="success_message">
		<p>Se encontr√≥ el documento indicado</p>
		<%= form_tag code_entry_register_path do %>
			<%= hidden_field_tag "doc_register_id", :value => 0 %>
			<%= submit_tag "Registrar Series" %>
		<% end %>
		<%= form_tag code_entry_show_path do %>
			<%= hidden_field_tag "folder_id", :value => 0 %>
			<%= submit_tag "Ver Series" %>
		<% end %>
	</div>
</section>

<section id="supplier_search" class="floating_part">
	<div class="floating_body">
		<div class="title">
			<h1>Busqueda de Proveedor</h1>
			<div class="second_title">
				<%= link_to_function "X", "hideBrandsMenu(this)" %>
			</div>
		</div>
		<div class="new_body">
			<%= form_tag search_supplier_path, :remote => true do %>
				<div class="form_div">
					<%= label_tag "name", "Nombre"%><br/>
					<%= text_field_tag "name" %>
				</div>
				<div class="form_div">
					<%= link_to_function "Buscar", "submitRegularForm(this)" %>
				</div>
				<div class="submit_part">
					<%= submit_tag "enviar" %>
				</div>
			<% end %>
			<div id="sup_search_result">

			</div>
		</div>
	</div>
</section>