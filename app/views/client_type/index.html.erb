<section id="client_type_index">
	<h1>Tipos de Cliente</h1>
	<% @ct.each do |ct| %>
		<div id=<%= "client_type_" + ct.id.to_s %> class="client_type_item">
			<span><%= ct.name %></span>
			<div class="client_type_row_options">
				<%= link_to_function 'Eliminar dato',"destroy_form(this, 'destroy_form_"+ct.id.to_s+"')", :class => "link_to_destroy_client_type" %>
				<% if can? :destroy, ClientType.new %>
					<div class="destroy_client_type" id=<%="destroy_form_"+ct.id.to_s%>>
						<%= form_tag client_type_destroy_path, :remote => true do %>
							<%= hidden_field_tag "ct_id", ct.id %>
							<%= submit_tag 'eliminar' %>
						<% end %>
					</div>
				<% end %>
				<% if can? :edit, ClientType.new %>
					<%= link_to_function 'Actualizar', "update_form(this,'update_form_"+ct.id.to_s+"')", :class => "link_to_update_client_type" %>
					<div class="update_client_type" id=<%="update_form_"+ct.id.to_s%>>
						<%= form_tag client_type_update_path, :remote => true do %>
							<%= hidden_field_tag 'ct_id', ct.id %>
							<%= label_tag 'new_value', 'Nuevo Valor' %>
							<%= text_field_tag 'new_value' %>
							<%= submit_tag 'Actualizar' %>
						<% end %>
					</div>
				<% end %>
			</div>
		</div>
	<% end %>

	<% if can? :create, ClientType.new %>
		<div id="create_client_type">
			<h1>Crear Tipo de Cliente</h1>
			<%= form_tag client_type_create_path, :remote => true do %>
				<%= label_tag "name","Nombre:" %>
				<%= text_field_tag "name" %>
				<%= submit_tag "Enviar", :id => "client_type_create_input_submit_button"%>
			<% end %>
		</div>
	<% end %>
</section>