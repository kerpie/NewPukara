<section id="price_type_title_part">
	<hgroup id="price_type_title">
		<h1>Tipo de dinero</h1>
	</hgroup>
</section>

<section id="price_type_index">
	<table>
		<tr>
			<th>Tipo</th>
			<th>Descuento</th>
			<th colspan="2">Opciones</th>
		</tr>
		<% @pt.each do |pt| %>
			<%= render "pt_row.html", :pt => pt %>
		<% end %>
	</table>

	<section id="create_new_price_type_link">
		<%= link_to_function "Crear nuevo tipo", "showCreatePriceTypeForm()"%>
	</section>

</section>

<section class="floating_box">
	<div class="upper_part">
		<h1>Crear nuevo tipo de dinero</h1>
		<h2><%= link_to_function "X", "hideFloatingBox(this)" %></h2>
	</div>
	<%= form_tag price_type_create_path, :id => "create_price_type", :remote => true do %>
		<div class="price_type_new_form_div">
			<%= label_tag "name","Nombre:" %><br>
			<%= text_field_tag "name" %>
		</div>
		<div class="price_type_new_form_div">
			<%= label_tag "discount", "Descuento: " %><br>
			<%= text_field_tag "discount" %>
		</div>
		<div class="submit_button_part">
			<%= submit_tag "Guardar", :id => "price_type_create_input_submit_button"%>
		</div>
	<% end %>
</section>

<section class="floating_box">
	<div class="upper_part">
		<h1>Modificar tipo de Dinero</h1>
		<h2><%= link_to_function "X", "hideFloatingBox(this)" %></h2>
	</div>
	<%= form_tag price_type_update_path, :id => "update_price_type", :remote => true do %>
		<%= hidden_field_tag "ptupdate_id", "" %>
		<div class="price_type_new_form_div">
			<%= label_tag "up_name","Nombre:" %><br>
			<%= text_field_tag "up_name" %>
		</div>
		<div class="price_type_new_form_div">
			<%= label_tag "up_discount", "Descuento: " %><br>
			<%= text_field_tag "up_discount"%>
		</div>
		<div class="submit_button_part">
			<%= submit_tag "Guardar", :id => "price_type_create_input_submit_button"%>
		</div>
	<% end %>
</section>